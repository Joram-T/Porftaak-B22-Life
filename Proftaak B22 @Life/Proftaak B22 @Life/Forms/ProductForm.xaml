                <Button x:Name="btnArtToevoegen" Content="Toevoegen" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="75" Click="btnArtToevoegen_Click" Grid.Column="3" Height="19"/>
